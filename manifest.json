{
  "manifest_version": 3,
  "name": "Square Dashboard Automation",
  "version": "1.0.0",
  "description": "AI-powered automation agents for Square Dashboard operations - SEO, catalog management, and navigation",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*.squareup.com/*",
    "https://squareup.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.squareup.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Square Automation"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://*.squareup.com/*"]
    }
  ],
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}
